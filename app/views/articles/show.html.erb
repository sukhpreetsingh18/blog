<div class="jumbotron">

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.user.email %>
</p>
 

<%if user_signed_in? %>
  <%if current_user==@article.user %>
		<%= link_to 'Edit', edit_article_path(@article) %> |
	<% end %>
<% end %>
<%= link_to 'Back', articles_path %>

<%if user_signed_in? %>
  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
<% end %>

<h3>Comments</h3>
<%= render @comments %>

</div>